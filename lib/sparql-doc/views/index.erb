<html>
  <head>
    <title><%= title %></title>
    <link href="bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/codemirror/lib/codemirror.css">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    </style>    
  </head>
  <body>
  
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="index.html"><%= title %></a>
          <ul class="nav">
          	<% if overview %>
		  		<li><a href="index.html#overview">Overview</a></li>
		  	<% end %>		  	
		  </ul>          
        </div>
      </div>
    </div>
      
<div class="container">
      <div class="hero-unit">
        	<h1><%= title %></h1>
      </div>

      <div class="row">
        <div class="span12">
          <p><%= description %></p>
        </div>
      </div>

	  <% if overview %>
      	<div class="row">
        	<div class="span12">
        		<h3 id="overview">Overview</h3>
          		<%= overview %>
        	</div>
      	</div>
	  <% end %>      	
      
      <div class="row">
        <div class="span12">
          <h3>Queries</h3>
          <p>This set of documentation covers <strong><%= @queries.size %></strong> queries</p>
          <table class="table">
            <thead>
            	<tr>
            		<th>Title</th><th>Source Path</th>
            	</tr>
            </thead>
            <tbody>
           		<% @queries.each do |query| %>
           		<tr>
           		  <td><a href="<%= query.output_filename %>"><%= query.title %></a></td><td><code><%= query.path %></code></td>
           		</tr>
           		<% end %>
			</tbody>           		
          </table>
        </div>
      </div>

	<hr>
	<footer class="footer">Generated with <a href="http://github.com/ldodds/sparql-doc">sparql-doc</a>.</footer>
</div>

	<script src="jquery.js"></script> 		
	<script src="bootstrap.min.js"></script>
	
	<script src="/codemirror/lib/codemirror.js" type="text/javascript"></script> 		 				
	<script src="/codemirror/mode/sparql/sparql.js"></script>	
  </body>	
</html>
